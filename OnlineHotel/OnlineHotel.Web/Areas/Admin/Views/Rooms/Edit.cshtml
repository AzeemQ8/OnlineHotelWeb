@using OnlineHotel.Models
@model OnlineHotel.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RoomViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <select asp-for="RoomTypeId" asp-items="@ViewBag.type" class="form-control"></select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@ViewBag.RoomStatus">
                   
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RoomPrice" class="control-label"></label>
                <input asp-for="RoomPrice" class="form-control" />
                <span asp-validation-for="RoomPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomPicture" class="control-label"></label>
                <input asp-for="RoomPicture" class="form-control" />
                <span asp-validation-for="RoomPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.facilities.Count; i++)
                {
                    <input asp-for="facilities[i].Value" type="hidden" class="form-control" />
                    <input asp-for="facilities[i].Selected" class="form-check-input" />@Model.facilities[i].Text
                }



            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
